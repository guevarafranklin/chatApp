<div data-controller="form">
  <%= form_with(model: [room, message], id: 'message_form', class: 'w-full flex flex-col', data: { controller: 'form', action: 'submit->form#resetComponent' }) do |f| %> 
    <div class="flex flex-col gap-3">
      <%= f.text_field :message, class: 'w-full border-2 border-gray-200 rounded p-2' %>
      <%= f.submit 'Send', class: 'cursor-pointer p-2 text-sm text-white font-semibold bg-green-600 rounded' %>
    </div>
  <% end %>
</div>