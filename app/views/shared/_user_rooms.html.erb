<section class="flex flex-col w-full">
  <span class="text-white text-center font-semibold mt-5">
    <%= current_user.email %>
  </span>
  <div class="flex flex-col items-center justify-center mt-2 w-full">
    <%= button_to 'Log Out', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'px-3 py-1 text-white bg-red-700 rounded font-semibold text-sm' %>
  </div>
  <h3 class="text-white font-bold text-xl mt-3 text-center mb-2">My Rooms</h3>
  <div class="flex flex-col -x-5 gap-2 w-full" id="user_<%= current_user.id %>_rooms">
    <% current_user.rooms.all.each do |room| %>
      <%= render 'shared/room', room:room  %>
    <% end %>
  </div>
</section>